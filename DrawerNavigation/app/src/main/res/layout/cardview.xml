                        android:layout_height="150dp"
                        android:id="@+id/iv_P"
                        android:src="@drawable/pika"
                        android:scaleType="centerCrop"
                        tools:ignore="DuplicateIds" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pikachu"
                        android:textColor="#f7f6f6"
                        android:layout_alignBottom="@+id/iv_P"
                        android:layout_centerHorizontal="true"
                        android:textSize="25sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_P"
                        android:text="Ada Pikachu"
                        android:layout_margin="16sp"
                        android:textSize="16sp"
                        android:layout_below="@+id/iv_P"
                        tools:ignore="DuplicateIds" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LIHAT"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_below="@+id/tv_P"
                        />
                    <ImageView
                        android:id="@+id/iv_favorite"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_menu_gallery"
                        android:layout_below="@+id/tv_P"
                        android:layout_alignParentRight="true"
                        android:layout_margin="10dp"
                        android:scaleType="fitXY"
                        tools:ignore="DuplicateIds" />
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_menu_share"
                        android:layout_below="@+id/tv_P"
                        android:layout_toLeftOf="@id/iv_favorite"

                        android:layout_margin="10dp"
                        android:scaleType="fitXY"
                        />


                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
